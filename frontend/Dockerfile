FROM nginx:alpine

# Borra la configuraci칩n por defecto
RUN rm /etc/nginx/conf.d/default.conf

# Copi치 tu configuraci칩n personalizada
COPY default.conf /etc/nginx/conf.d/default.conf

# Copi치 los archivos de frontend (relativo al Dockerfile)
COPY templates /usr/share/nginx/html
